@{
    ViewData["Title"] = "Contacto";
}

        <div class="container marketing">
            <h1> Contáctanos </h1>
            <address>
                ¿Dudas o comentarios? ¡Contáctanos! Utiliza nuestro formulario en línea o ponte en contacto con nuestros ejecutivos. <br>
                Teléfono: 01 (951) 178 1634 <br> Lada Sin Costo: 01 (800) 515 5625 <br> Correo electrónico: rentacongelada@gmail.com
            </address>

            <address>
                <strong>Support:</strong> <a href="mailto:Support@example.com">Support@example.com</a><br />
                <strong>Marketing:</strong> <a href="mailto:Marketing@example.com">Marketing@example.com</a>
            </address>

            <div class="container">
                <g:form class="form-signin" controller="contactenos" action="show">
                <div>
                  <h6> Nombre </h6>
                  <input type="text" class="form-control" placeholder="Ej. Maribel" required >
                </div>

                <div>
                  <h6> Direccion de Correo </h6>
                    <label for="inputEmail" class="sr-only"> E - Mail </label>
                    <input type="email" id="inputEmail" class="form-control" placeholder="Ej. maribel@hotmail.com" required >
                </div>

                <div>
                  <h6> Mensaje </h6>
                  <textarea class="form-control" required > </textarea>
                    <br>
                </div>
                    
                
                <div class="checkbox">
                        <label>
                            <input type="checkbox"> Acepto Terminos y Condiciones
                        </label>
                    </div>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Enviar</button>
                </g:form>
            </div>
        </div>
